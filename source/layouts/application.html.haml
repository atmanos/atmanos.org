!!!
%html
  %head
    %meta{charset: "utf-8"}
    %meta{content: "IE=edge,chrome=1", http: {equiv: "X-UA-Compatible"}}
    %link{rel: "shortcut icon", sizes: "16x16", type: "image/x-icon",  href: image_path("favicon.ico")}
    %meta{name: "viewport", content: "width=device-width, initial-scale=1"}
    %title= current_page.data.title
    %meta{property: "og:title", content: current_page.data.title}
    %meta{property: "og:image", content: image_path("logo.png")}
    - if description = current_page.data.description
      %meta{property: "og:description", content: description}
    = stylesheet_link_tag "application"

  %body{class: page_classes}
    = yield
    = javascript_include_tag "https://code.jquery.com/jquery-2.1.1.min.js"
    = javascript_include_tag "application"
